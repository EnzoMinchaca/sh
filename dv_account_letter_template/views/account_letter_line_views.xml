<odoo>
    <!-- Herencia de la vista lista -->
    <record id="account_letter_tree_inherit" model="ir.ui.view">
        <field name="name">account_letter_tree_inherit</field>
        <field name="model">account.letter.line</field>
        <field name="inherit_id" ref="dv_account_letter.account_letter_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <header>
                    <button name="generate_label_pdf" string="Imprimir" type="object" class="oe_highlight"/>
                </header>
            </xpath>
        </field>
    </record>
</odoo>