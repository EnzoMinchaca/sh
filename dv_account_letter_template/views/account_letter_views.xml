<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <!-- Herencia de la vista formulario -->
  <record id="account_letter_print_form_inherit" model="ir.ui.view">
    <field name="name">account_letter_print.form.inherit</field>
    <field name="model">account.letter</field>
    <field name="inherit_id" ref="dv_account_letter._account_letter_form"/>
    <field name="arch" type="xml">
      <xpath expr="//button[@name='action_protest']" position="after">
        <button name="action_print" string="Imprimir" type="object" class="oe_highlight"
          invisible="not is_printed"/>
      </xpath>
      <xpath expr="//field[@name='is_refinanced']" position="after">
        <field name="is_printed" invisible="1"/>
      </xpath>
    </field>
  </record>
</odoo>
