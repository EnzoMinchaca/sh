<odoo>
    <!-- Herencia de la vista formulario -->
    <record id="res_company_form_inherit" model="ir.ui.view">
        <field name="name">res.company.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Ramas de contabilidad" name="branch_reconciled_account">
                    <field name="reconcile_company_child_ids">
                        <tree string="Ramas de contabilidad" editable="bottom">
                            <field name="id"/>
                            <field name="name"/>
                            <field name="partner_id"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
