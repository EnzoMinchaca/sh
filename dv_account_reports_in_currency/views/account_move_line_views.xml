<odoo>
    <!-- Herencia de la vista lista -->
    <record id="account_move_line_tree_inherited" model="ir.ui.view">
        <field name="name">account.move.line.tree.inherited</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='balance']" position="after">
                <field name="balance_usd" optional="hide"/>
                <field name="exchange_rate" optional="hide"/>
                <field name="usd_currency_id" column_invisible="1"/>
            </xpath>
            <xpath expr="//tree" position="inside">
                <header>
                    <button name="force_update" string="Actualizar tipo de cambio" type="object" class="oe_highlight"/>
                </header>
            </xpath>
        </field>
    </record>
</odoo>
