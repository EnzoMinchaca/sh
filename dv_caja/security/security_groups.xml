<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="group_caja_administrador" model="res.groups">
        <field name="name">Cajas: Administrador</field>
        <field name="comment">Grupo con permisos de administrador para Cajas</field>
    </record>
    
    <record id="group_caja_responsable" model="res.groups">
        <field name="name">Cajas: Responsable</field>
        <field name="comment">Grupo con permisos de responsable para Cajas</field>
    </record>

    <record id="rule_caja_responsable_only" model="ir.rule">
        <field name="name">Cajas solo visibles por responsable</field>
        <field name="model_id" ref="model_caja_caja"/> <!-- Referencia al modelo caja.caja -->
        <field name="domain_force">[('responsable', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('dv_caja.group_caja_responsable'))]"/>
    </record>


</odoo>