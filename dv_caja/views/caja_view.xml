<odoo>
    <!-- VISTAS MODELO CAJA, PERIODO Y SECUENCIA -->
    <!-- Vista Tree Caja-->
    <record id="view_caja_tree" model="ir.ui.view">
        <field name="name">caja.caja.tree</field>
        <field name="model">caja.caja</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="cod"/>
                <field name="responsable"/>
                <field name="saldo_disponible"/>
                <field name="saldo_periodo"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form Caja -->
    <record id="view_caja_form" model="ir.ui.view">
        <field name="name">caja.caja.form</field>
        <field name="model">caja.caja</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="not es_admin"/>
                            <field name="cod" readonly="not es_admin"/>
                            <field name="responsable" readonly="not es_admin"/>
                            <field name="currency_id" readonly="not es_admin" options="{'no_open': True}"/>
                            <field name="saldo_disponible" readonly="not es_admin"/>
                            <field name="saldo_periodo" readonly="not es_admin"/>
                            <field name="gasto_provisiones" readonly="not es_admin" invisible="1"/>
                        </group>
                        <group>
                            <field name="es_admin" invisible="1"/>
                            <field name="diario" readonly="not es_admin" options="{'no_open': True}"/>
                            <field name="periodo_id" context="{'default_caja_id': id}"/>
                            <field name="secuencia_id" context="{'default_periodo_id': periodo_id, 'default_caja_id': id}" readonly="not periodo_id"/>
                        </group>
                    </group>
                    <!-- Botón para abrir el formulario de factura de proveedor -->
                    <div style="display: flex; justify-content: space-around; margin-top: 20px;">
                        <button name="action_caja_new_transaction" type="object" string="Agregar Saldo a la Caja" class="btn-primary" readonly="not es_admin" invisible="not es_admin"/>
                        <button name="action_open_invoice_form" type="object" string="Crear Nueva Provisión" class="btn-primary" invisible="not secuencia_id"/>
                        <button name="action_open_payment_form" type="object" string="Transferir saldo" class="btn-primary"/>
                    </div>
                    <notebook>
                        <page string="Provisiones">
                            <field name="facturas_ids" widget="many2many" options="{'no_create': True, 'no_create_edit': True}" readonly="1"
                                context="{'action_id': 'dv_caja.action_open_invoices_fullscreen'}">
                                <tree>
                                    <field name="name" string="Nombre"/>
                                    <field name="partner_name" string="Proveedor"/>
                                    <field name="partner_vat" string="RUC"/>
                                    <field name="invoice_date" string="Fecha de la provisión"/>
                                    <field name="amount_total"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Form Periodo -->
    <record id="view_caja_periodo_form" model="ir.ui.view">
        <field name="name">caja.periodo.form</field>
        <field name="model">caja.periodo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="saldo_periodo" readonly="1"/>
                            <field name="activo" invisible="1"/>
                            <field name="secuencia_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="name"/>
                                        <field name="periodo_id" readonly="1"/>
                                        <field name="caja_id" readonly="1"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                        <group>
                            <field name="caja_id" required="1" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Form Secuencia -->
    <record id="view_caja_secuencia_form" model="ir.ui.view">
        <field name="name">caja.secuencia.form</field>
        <field name="model">caja.secuencia</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="periodo_id" readonly="1"/>
                        <field name="caja_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acciones -->
    <record id="action_caja" model="ir.actions.act_window">
        <field name="name">Caja</field>
        <field name="res_model">caja.caja</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_open_invoices_fullscreen" model="ir.actions.act_window">
        <field name="name">Facturas FullScreen</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">form</field>
        <field name="target">fullscreen</field>
    </record>


    <!-- Menús -->
    <menuitem id="menu_caja_root"
          name="Cajas"
          parent="account_accountant.menu_accounting"
          sequence="25" />
    <menuitem id="menu_caja_caja"
          name="Cajas"
          parent="dv_caja.menu_caja_root"
          action="action_caja"
          sequence="9" />
    
    <!-- ViISTAS REPORTE CAJA -->
    <!-- Vista Lista -->
    <record id="view_reporte_caja_tree" model="ir.ui.view">
        <field name="name">reporte.caja.tree</field>
        <field name="model">reporte.caja</field>
        <field name="arch" type="xml">
            <tree create="0" expand="0">
                <field name="name"/>
                <field name="caja_id" />
                <field name="periodo_id"/>
                <field name="reporte_tipo_pago"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="importe"/>
                <field name="payment_id"/>
                <field name="reporte_fecha"/>
            </tree>
        </field>
    </record>

    <!-- Vista Formulario -->
    <record id="view_reporte_caja_form" model="ir.ui.view">
        <field name="name">reporte.caja.form</field>
        <field name="model">reporte.caja</field>
        <field name="arch" type="xml">
            <form create="0">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="caja_id"/>
                        <field name="periodo_id" options="{'no_open': True}"/>
                        <field name="reporte_tipo_pago"/>
                        <field name="currency_id" options="{'no_open': True}"/>
                        <field name="importe_absoluto" string="Importe"/>
                        <field name="payment_id"/>
                        <field name="move_id" invisible="1"/>
                        <field name="reporte_fecha"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Pivot -->
    <record id="view_reporte_caja_pivot" model="ir.ui.view">
        <field name="name">reporte.caja.pivot</field>
        <field name="model">reporte.caja</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="reporte_tipo_pago" type="col"/>
                <field name="importe" type="measure"/>
                <field name="currency_id" type="row"/>
                <field name="caja_id" type="row"/>
                <field name="periodo_id" type="row"/>
            </pivot>
        </field>
    </record>

    <!-- Agrupaciones -->
    <record id="view_reporte_caja_search" model="ir.ui.view">
        <field name="name">reporte.caja.search</field>
        <field name="model">reporte.caja</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Agrupar por Caja" name="group_by_caja" context="{'group_by': 'caja_id'}"/>
                <filter string="Agrupar por Periodo" name="group_by_periodo" context="{'group_by': 'periodo_id'}"/>
                <filter string="Agrupar por Tipo de Operación" name="group_by_tipo_pago" context="{'group_by': 'reporte_tipo_pago'}"/>
            </search>
        </field>
    </record>

    <!-- Acciones -->
    <record id="action_reporte_caja" model="ir.actions.act_window">
        <field name="name">Reporte de Cajas</field>
        <field name="res_model">reporte.caja</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="search_view_id" ref="view_reporte_caja_search"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
    </record>

    <!-- Menú para Reporte de Caja -->
    <menuitem id="menu_reporte_caja" 
              name="Reporte de Cajas" 
              parent="dv_caja.menu_caja_root" 
              action="action_reporte_caja" 
              sequence="10"/>

</odoo>
