<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_pe_spot_code_view_form" model="ir.ui.view">
        <field name="name">l10n_pe.spot.code.view.form</field>
        <field name="model">l10n_pe.spot.code</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="percentage"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="l10n_pe_spot_code_view_tree" model="ir.ui.view">
        <field name="name">l10n_pe.spot.code.view.tree</field>
        <field name="model">l10n_pe.spot.code</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
    <record id="l10n_pe_spot_code_action" model="ir.actions.act_window">
        <field name="name">Tabla de detracciones</field>
        <field name="res_model">l10n_pe.spot.code</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>