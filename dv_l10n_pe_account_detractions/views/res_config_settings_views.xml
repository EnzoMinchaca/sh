<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_form_inherit_l10n_pe_edi" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit.l10n.pe.edi</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='invoicing_settings']" position="after">
                <block title="Detracciones">
                    <setting>
                        <field name="l10n_pe_spot_mode"/>
                    </setting>
                    <setting invisible="l10n_pe_spot_mode != 'new_move'">
                        <field name="l10n_pe_spot_journal_id"/>
                    </setting>
                    <setting invisible="l10n_pe_spot_mode != 'new_move'" required="l10n_pe_spot_mode == 'new_move'">
                        <field name="l10n_pe_spot_payable_account_id"/>
                    </setting>
                    <setting invisible="l10n_pe_spot_mode != 'new_move'" required="l10n_pe_spot_mode == 'new_move'">
                        <field name="l10n_pe_spot_receivable_account_id"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>