<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_invoice_document_dues" inherit_id="l10n_pe_edi.report_invoice_document">
            <!-- Global variables -->
            <xpath expr="//h2[1]" position="after">
                <t t-set="dues_list" t-value="o._l10n_pe_edi_get_dues()"/>
            </xpath>
            <xpath expr="//p[@t-if='spot']" position="after">
                <table t-if="dues_list" class="table table-condensed">
                    <tr>
                        <td>
                            <strong>NÂ° Cuota</strong>
                        </td>
                        <td>
                            <strong>Fecha Venc.</strong>
                        </td>
                        <td>
                            <strong>Importe Neto</strong>
                        </td>
                        <td>
                            <strong>Moneda</strong>
                        </td>
                    </tr>
                    <t t-set="i" t-value="0"/>
                    <tr t-foreach="dues_list" t-as="due">
                        <t t-set="i" t-value="i+1"/>
                        <td>
                            <t t-esc="i"/>
                        </td>
                        <td>
                            <span t-esc="due['date_maturity']"/>
                        </td>
                        <td>
                            <span t-esc="due['amount']"/>
                        </td>
                        <td>
                            <span t-esc="due['currency_name']"/>
                        </td>
                    </tr>
                </table>
            </xpath>
        </template>
    </data>
</odoo>