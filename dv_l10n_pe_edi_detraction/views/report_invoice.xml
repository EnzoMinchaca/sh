<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_invoice_document_detraction" inherit_id="l10n_pe_edi.report_invoice_document">
            <xpath expr="//p[@t-if='spot']" position="after">
                <div class="row my-3">
                    <div class="col-5">
                        <table t-if="spot" class="table table-condensed">
                            <tr>
                                <td colspan="2" class="text-center">
                                    <strong>Detracción:</strong>
                                </td>
                            </tr>
                            <tr>
                                <td>Cta.cte.Banco de la Nacion:</td>
                                <td>
                                    <span t-esc="spot['payee_financial_account']"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Neto a pagar:</td>
                                <td>
                                    <span t-field="o.currency_id.symbol"/>
                                    <span t-esc="spot['AmountToPay']"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Detracción (
                                    <span t-esc="spot['payment_percent']"/>%)
                                </td>
                                <td>
                                    <span t-field="o.company_id.currency_id.symbol"/>
                                    <span t-esc="spot['Amount']"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>