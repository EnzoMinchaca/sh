<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_invoice_document_retention" inherit_id="dv_l10n_pe_edi_template_light.report_pe_invoice_document">
            <!-- <xpath expr="//div[@id='qrcode']" position="after"> -->
            <xpath expr="(//div[6])" position="before">
                <table t-if="o.l10n_pe_is_subject_to_withholding" class="table table-sm table-bordered boder-light text-center" style="page-break-inside: avoid; border: 1px solid #a1a4ab;">
                    <thead>
                        <!-- <tr style="color: #111827; background-color: #e7e9ed;">
                            <th colspan="3">Información de Retención</th>
                        </tr> -->
                        <tr style="color: #111827; background-color: #e7e9ed;">
                            <th style="width: 30%;">BASE IMPONIBLE</th>
                            <th style="width: 40%;">PORCENTAJE DE RETENCIÓN</th>
                            <th style="width: 30%;">IMPORTE</th>
                        </tr>
                    </thead>
                    <tbody style="border-top: 1px solid currentColor;">
                        <tr>
                            <td>
                                <span t-field="o.amount_total" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                            <td>
                                <span t-esc="o.l10n_pe_withholding_code_percentage"/>%
                            </td>
                            <td>
                                <span t-field="o.l10n_pe_withholding_amount_currency" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </xpath>
        </template>
    </data>
</odoo>